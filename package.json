{
  "name": "bitcoin-script-hints",
  "displayName": "Rust Bitcoin Lib Script! Hints",
  "description": "Real-time stack visualization for Bitcoin Script operations in Rust projects. See the stack state as you code with inline hints showing the main stack and alt-stack after each operation.",
  "version": "0.3.4",
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "publisher": "portlandhodl",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "bitcoin",
    "script",
    "rust",
    "stack",
    "visualization",
    "hints"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/russeree/bitcoin-script-hints-vscode"
  },
  "icon": "assets/icon.png",
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.rust.bitcoin-script.injection",
        "path": "./syntaxes/bitcoin-script.tmLanguage.json",
        "injectTo": ["source.rust"]
      }
    ],
    "themes": [
      {
        "label": "Bitcoin Script",
        "uiTheme": "vs-dark",
        "path": "./themes/bitcoin-script-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "node esbuild.js",
    "build:prod": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src",
    "check-types": "tsc --noEmit",
    "compile": "npm run build",
    "package": "npm run build:prod",
    "pretest": "npm run compile",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
